rule bcftools__build_consensus_sequence:
    """
    """
    input:
        fa = 'reference/{reference}/{reference}.fa.fai',
	vcf = 'variant/'
    output:
        bed = 'reference/{reference}/annotation/{panel}/regions.vardict.bed',
    conda:
        config['snakelines_dir'] + '/environments/bcftools.yaml'
    shell:
        """
        cut -f 1-4 {input.bed} > {output.bed}
	"""

