rule bgzip__compress_vcf:
    """
    Compresses VCF file filename.vcf as filename.vcf.gz
    """
    input:
        '{path}/{sample}.vcf'
    output:
        '{path}/{sample}.vcf.gz'
    benchmark:
        '{path}/log/{sample}.vcf.gz.benchmark'
    conda:
        config['snakelines_dir'] + '/environments/tabix.yaml'
    shell:
        """
        bgzip -c {input} > {output}
        """