rule samtools__bam_index:
    """
    Generate .bai index to .bam files to quick recover reads from genomic location of interest.
    """
    input:
        '{path}/{sample}.bam'
    output:
        '{path}/{sample}.bam.bai'
    conda:
        config['snakelines_dir'] + '/enviroments/others_env.yaml'
    shell:
        """
        samtools index {input}
        """
