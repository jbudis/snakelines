rule faidx_fa:
    input:
        '{genome}.fa'
    output:
        '{genome}.fa.fai'
    shell:
        '''
        samtools faidx {input}
        '''

rule faidx_fasta:
    input:
        '{genome}.fasta'
    output:
        '{genome}.fasta.fai'
    shell:
        '''
        samtools faidx {input}
        '''
