rule samtools__prepare_fai_index:
    '''
    Index fasta file to quicker retrieve substring sequences
    '''
    input:
        '{genome}.fa'
    output:
        '{genome}.fa.fai'
    conda:
        config['snakelines_dir'] + '/enviroments/others_env.yaml'
    shell:
        '''
        samtools faidx {input}
        '''