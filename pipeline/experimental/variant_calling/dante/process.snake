configfile: srcdir('config.yaml')

read_type = config['dante']['read_type']
pipeline = glob_wildcards('reads/%s/{sample,%s}_R1.fastq.gz' % (read_type, config['sample_pattern']))

include: config['snake_dir'] + '/preprocess/report/fastqc.snake'
include: config['snake_dir'] + '/preprocess/trim_reads/trimmomatic.snake'
include: config['snake_dir'] + '/variant/callers/dante.snake'

rule process:
    input:
        # Dante variant calling
        'dante/calls.tsv'