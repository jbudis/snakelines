rule subsample_fastq_head:
    input:
        'reads/{read_type}/{sample}.fastq'
    output:
        'reads/{read_type, [a-z]+}-{read_count, \d+}kr/{sample}.fastq'
    threads:
        int(config['threads'])
    shell:
        '''
        head \
            --lines 2000000 \
            {input} \
        > {output}
        '''