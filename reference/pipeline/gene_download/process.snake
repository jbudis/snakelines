configfile: srcdir('config.yaml')

include: config['snake_dir'] + '/reference/download/ncbi.snake'
include: config['snake_dir'] + '/reference/indices/faidx.snake'

gene = config['ncbi']['gene']

rule process:
    input:
        fa = '%s.fa' % gene,
        fai = '%s.fa.fai' % gene,
        tax = '%s.tax' % gene,
