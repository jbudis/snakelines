rule sam_to_bam:
    input:
        '{path}/{sample}.sam'
    output:
        '{path}/{sample}.bam'
    shell:
        '''
        samtools view -bhS {input} > {output}
        '''

rule bam_to_sam:
    input:
        '{path}/{sample}.bam'
    output:
        '{path}/{sample}.sam'
    shell:
        '''
        samtools view -h {input} > {output}
        '''

